{
  "family": "galani-api",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::209483893123:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::209483893123:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "Main",
      "image": "<ECR_IMAGE_URI>",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "command": [
        "python3",
        "-m",
        "uvicorn",
        "uaal_fastapi:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000"
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/galani-api",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
