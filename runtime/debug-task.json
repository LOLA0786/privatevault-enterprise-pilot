{
  "family": "default-galani-enterprise",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "taskRoleArn": "arn:aws:iam::209483893123:role/galani-task-role",
  "executionRoleArn": "arn:aws:iam::209483893123:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "Main",
      "image": "209483893123.dkr.ecr.ap-south-1.amazonaws.com/galani-enterprise:a7186be",
      "essential": true,
      "portMappings": [
        { "containerPort": 8000, "protocol": "tcp" }
      ],
      "command": [
        "sh",
        "-c",
        "echo 'STARTING DEBUG MODE'; python -m http.server 8000 & sleep 3600"
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/aws/ecs/default/galani-enterprise-9f3e",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
