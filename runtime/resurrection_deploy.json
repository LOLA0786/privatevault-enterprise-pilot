{
    "family": "galani-enterprise",
    "networkMode": "awsvpc",
    "executionRoleArn": "arn:aws:iam::209483893123:role/ecsTaskExecutionRole",
    "containerDefinitions": [
        {
            "name": "Main",
            "image": "209483893123.dkr.ecr.ap-south-1.amazonaws.com/galani-enterprise@sha256:463f3ae2bede55753cc723c6699a3bbe03546095cb41ac9ee13fecdec04a0b03",
            "command": [
                "uvicorn",
                "governance:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "portMappings": [
                {
                    "containerPort": 8000,
                    "hostPort": 8000,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/aws/ecs/galani-api",
                    "awslogs-region": "ap-south-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "256",
    "memory": "512"
}
