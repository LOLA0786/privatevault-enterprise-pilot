{
  "family": "default-galani-enterprise",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::209483893123:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::209483893123:role/galani-task-role",
  "containerDefinitions": [
    {
      "name": "Main",
      "image": "209483893123.dkr.ecr.ap-south-1.amazonaws.com/galani-enterprise:a7186be",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8000/api/v3/health || exit 1"
        ],
        "interval": 10,
        "timeout": 5,
        "retries": 5,
        "startPeriod": 20
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/aws/ecs/galani",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
